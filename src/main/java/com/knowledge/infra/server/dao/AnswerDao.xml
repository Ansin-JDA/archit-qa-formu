<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.knowledge.infra.server.dao.AnswerDao"> 
<insert id="addAnswer" parameterType="com.knowledge.infra.server.model.Answer" flushCache="true">  
   INSERT INTO t_answer (areferenceqid,atitle,acontent,acreateuserid,aupdateuserid) VALUES (#{areferenceqid},#{atitle},#{acontent},#{acreateuserid},#{aupdateuserid})  
</insert>  
<update id="updateAnswer" parameterType="com.knowledge.infra.server.model.Answer">  
    UPDATE t_answer SET areferenceqid =#{areferenceqid},  atitle=#{atitle},acontent=#{acontent},acreateuserid=#{acreateuserid},aupdateuserid=#{aupdateuserid} where answerid =#{answerid}
</update>  
<delete id="deleteAnswer" parameterType="com.knowledge.infra.server.model.Answer">  
    DELETE FROM t_answer WHERE answerid=#{answerid}  
</delete>  
</mapper>