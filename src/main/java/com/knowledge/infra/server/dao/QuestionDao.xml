<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.knowledge.infra.server.dao.QuestionDao"> 
<insert id="addUser" parameterType="com.knowledge.infra.server.model.Question" flushCache="true">  
   INSERT INTO t_user (qtitle,qcontent,qcreateuserid,qupdateuserid,qlabel) VALUES (#{qtitle},#{qcontent},#{qcreateuserid},#{qupdateuserid},#{qlabel})  
</insert>  
<update id="updateUser" parameterType="com.knowledge.infra.server.model.Question">  
    UPDATE user SET qtitle=#{qtitle},qcontent=#{qcontent},qcreateuserid=#{qcreateuserid},qupdateuserid=#{qupdateuserid},qlabel=#{qlabel} where questionid =#{questionid}
</update>  
<delete id="deleteUser" parameterType="com.knowledge.infra.server.model.Question">  
    DELETE FROM user WHERE questionid=#{questionid}  
</delete>  
</mapper>